@page
@model LoginModel

@{







    ViewData["Title"] = "LOGIN AS";
}
<img src="~/imgs/background1.jpg" class="homeback" />

<div class="wrapper2">
    <h1 class="h1-header">@ViewData["Title"]</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="radio-labels">
            <label>
                <input type="radio" asp-for="UserData.UserType" value="C" checked />
                Customer
            </label>
            <label>
                <input type="radio" asp-for="UserData.UserType" value="E" checked />
                Employee
            </label>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <label asp-for="Input.Password" class="form-label"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            @* <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button> *@
            <input type="submit" value="LOGIN">
        </div>
        <div class="bottom-text">
            <input type="checkbox" name="Remember" checked="Checked"> Remember me |
            <a asp-page="./ForgotPassword">Forget Password?</a> <br>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user </a> <br>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </div>
    </form>
    <br>
    <div class="socials">
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-linkedin"></i></a>
    </div>

    <div id="overlay"></div>

</div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}